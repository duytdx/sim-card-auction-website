# WebAPI Environment Configuration Template
# Rename this file to webapi.env and update values for your environment

# Database Configuration
BIDX_DB_CONNECTION_STRING=Server=mysql;Database=BidXDB;User=bidxuser;Password=YourStrongPassword123!;Port=3306;

# Admin Account Credentials to seed the DB with it
BIDX_ADMIN_EMAIL=admin@bidx.com
BIDX_ADMIN_PASSWORD=Admin123!

# JWT Authentication
BIDX_JWT_SECRET_KEY=YourSuperSecretJWTKeyThatIsAtLeast32CharactersLong!

# Brevo Email Service API Key
BREVO_EMAIL_SERVICE_API_KEY=your-brevo-api-key

# Cloudinary Configuration for Media Storage
CLOUDINARY_APIKEY=your-cloudinary-api-key
CLOUDINARY_APISECRET=your-cloudinary-api-secret
CLOUDINARY_CLOUDNAME=your-cloudinary-cloud-name