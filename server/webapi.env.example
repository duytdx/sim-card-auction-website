# WebAPI Environment Configuration Template
# Rename this file to webapi.env and update values for your environment

# Database Configuration
BIDX_DB_CONNECTION_STRING=Data Source=sqlserver;Initial Catalog=<DATABASE_NAME>;User Id=<DB_USER>;Password=<DB_PASSWORD>;Encrypt=True;TrustServerCertificate=True;

# Admin Account Credentials to seed the DB with it
BIDX_ADMIN_EMAIL=<ADMIN_EMAIL>
BIDX_ADMIN_PASSWORD=<ADMIN_PASSWORD>

# JWT Authentication
BIDX_JWT_SECRET_KEY=<STRONG_SECRET_KEY>

# Brevo Email Service API Key
BREVO_EMAIL_SERVICE_API_KEY=<BREVO_API_KEY>

# Cloudinary Configuration for Media Storage
CLOUDINARY_APIKEY=<CLOUDINARY_API_KEY>
CLOUDINARY_APISECRET=<CLOUDINARY_API_SECRET>
CLOUDINARY_CLOUDNAME=<CLOUDINARY_CLOUD_NAME>

# Google OAuth Configuration
GOOGLE_CLIENT_ID=<GOOGLE_CLIENT_ID>